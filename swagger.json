{
    "openapi": "3.0.2",
    "info": {
        "title": "dr Ariawan's Project",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "https://api.server.test/v1"
        }
    ],
    "paths": {
        "/questioner": {
            "get": {
                "tags": [
                    "Questioner"
                ],
                "description": "Get list of questions and choises answer",
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/QuestionResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Questioner"
                ],
                "description": "Submit the answer of questions",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AnswerRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EmptyResponseSuccess"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/questioner/validate": {
            "post": {
                "tags": [
                    "Questioner"
                ],
                "description": "Validate the user that want to answer the question. Everyone is just have 2 attemp for answering, as myself and partner.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/QuestionerUserValidate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EmptyResponseSuccess"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "User already take the questioner",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegisterdResponseError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user": {
            "description": "admin, perawat, dokter",
            "get": {
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "required": true,
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "meta": {
                                            "$ref": "#/components/schemas/Meta"
                                        },
                                        "messages": {
                                            "$ref": "#/components/schemas/Messages"
                                        },
                                        "data": {
                                           "$ref": "#/components/schemas/User"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "User"
                ],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema":{
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EmptyResponseSuccess"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "User"
                ],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema":{
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EmptyResponseSuccess"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/list": {
            "get": {
                "tags": [
                    "User"
                ],
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "meta": {
                                            "$ref": "#/components/schemas/Meta"
                                        },
                                        "messages": {
                                            "$ref": "#/components/schemas/Messages"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items":{
                                                "$ref": "#/components/schemas/User"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/deactive": {
            "post": {
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "required": true,
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EmptyResponseSuccess"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login":{
            "post":{
                "tags": [
                    "Authorization"
                ],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema":{
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
        
    },
    "components": {
        "schemas": {
            "EmptyResponseSuccess": {
                "type": "object",
                "properties": {
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    },
                    "messages": {
                        "$ref": "#/components/schemas/Messages"
                    },
                    "data": {}
                }
            },
            "RegisterdResponseError": {
                "type": "object",
                "properties": {
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    },
                    "messages": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "User has already registered."
                        }
                    },
                    "data": {}
                }
            },
            "QuestionResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    },
                    "messages": {
                        "$ref": "#/components/schemas/Messages"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "number",
                                    "example": "10"
                                },
                                "question": {
                                    "type": "string",
                                    "example": "https://linkto.com/video.mp4"
                                },
                                "desc": {
                                    "type": "string",
                                    "example": "Tolong jawab dengan kata ya dan tidak"
                                },
                                "ans_type": {
                                    "type": "string",
                                    "example": "choices",
                                    "enum": [
                                        "choices",
                                        "number",
                                        "text",
                                        "date",
                                        "voice"
                                    ]
                                },
                                "choices": {
                                    "type": "array",
                                    "items": {
                                        "oneOf": [
                                            {
                                                "type": "object",
                                                "properties": {
                                                    "detail": {
                                                        "type": "string",
                                                        "example": "Ya"
                                                    },
                                                    "slugs": {
                                                        "type": "string",
                                                        "example": "boleh;silahkan;oke;yes;lanjutkan;"
                                                    },
                                                    "goto": {
                                                        "type": "number",
                                                        "example": "15"
                                                    }
                                                }
                                            },
                                            {
                                                "type": "object",
                                                "properties": {
                                                    "detail": {
                                                        "type": "string",
                                                        "example": "Tidak"
                                                    },
                                                    "slugs": {
                                                        "type": "string",
                                                        "example": "jangan dulu;tidak;maaf;no;"
                                                    },
                                                    "goto": {
                                                        "type": "number",
                                                        "example": "20"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "Meta": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string",
                        "example": "001REC-S"
                    },
                    "message": {
                        "type": "string",
                        "example": "success"
                    }
                }
            },
            "Messages": {
                "type": "array",
                "items": {}
            },
            "AnswerRequest": {
                "type": "object",
                "properties": {
                    "answer": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "question": {
                                    "type": "number",
                                    "example": "10"
                                },
                                "desc": {
                                    "type": "string",
                                    "example": "yes"
                                }
                            }
                        }
                    }
                }
            },
            "QuestionerUserValidate": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "jhon.doe@check.com"
                    },
                    "number": {
                        "type": "string",
                        "example": "08129909891234"
                    },
                    "as": {
                        "type": "string",
                        "example": "myself",
                        "enum": [
                            "myself",
                            "partner"
                        ]
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "jhondoe@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "supersecret"
                    },
                    "name": {
                        "type": "string",
                        "example": "Jhon Doe"
                    },
                    "specialization": {
                        "type": "string",
                        "example": "Spesialis Obstetri dan Ginekologi"
                    },
                    "picture": {
                        "type": "string",
                        "example": "picture.jpg"
                    },
                    "role": {
                        "type": "string",
                        "example": "admin"
                    }
                }
            },
            "Login": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "jhondoe@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "supersecret"
                    }
                }
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    },
                    "messages": {
                        "$ref": "#/components/schemas/Messages"
                    },
                    "data": {
                        "type": "object",
                        "properties": {
                            "token": {
                                "type": "number",
                                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                            }
                        }
                    }
                }
            }
        }
    }
}